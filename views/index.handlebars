<main class="login-container">
    <header class="input-header">
        <h2>Log In or Sign Up</h2>
    </header>

    <section class="login-inputs">
        <form class="login-form">
            <div class="form-item">
                <label for="login-email" class="form-prompt">E-mail:</label>
                <input type="email" id="login-email" class="textfield">
            </div>
            
            <div class="form-item">
                <label for="login-username" class="form-prompt">Username:</label>
                <input type="text" id="login-username" class="textfield">
            </div>

            <div class="form-item">
                <input type="submit" value="Submit" id="submitBtn">
            </div>
        </form>

        <a href="#" class="signup-link">Click here to sign up!</a>
    </section>
</main>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
